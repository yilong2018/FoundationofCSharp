@page
@model M07L11HomeWorkRazorDemo.UserWallModel
@{
    ViewData["Title"] = "Users Wall";
}

<h2> Users Wall </h2>



<form method="post">




    <div class="form-group">
        @for (int i = 0; i < Model.people.Count; i++)
        {
            <input type="hidden" asp-for="people[i]" />
        }
        <label>First Name:</label>
        <input type="text" asp-for="person.FirstName" placeholder="type your first name" />
    </div>

    <div class="form-group">
        <label>Last Name:</label>
        <input type="text" asp-for="person.LastName" placeholder="type your last name" />
    </div>

    <button type="submit" class="btn btn-primary">Add User</button>
</form>


<h2>There are People:</h2>
<ul>
    @foreach (var item in Model.people)
        {
            <li>
                @item.FullName
            </li>
        }
</ul>



